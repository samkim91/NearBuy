<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_chat_utext">

    <ImageView
        android:id="@+id/uImg"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/uNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방이름"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/uImg"
        app:layout_constraintLeft_toRightOf="@id/uImg"
        />

    <TextView
        android:id="@+id/uText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble2"
        android:text="받은 내용"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:maxWidth="300dp"
        app:layout_constraintTop_toBottomOf="@id/uNickname"
        app:layout_constraintLeft_toLeftOf="@id/uNickname"
        />

    <TextView
        android:id="@+id/uDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받은 시간"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/uText"
        app:layout_constraintBottom_toBottomOf="@id/uText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>