<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SignupActivity">

    <TextView
        android:id="@+id/phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:id="@+id/textwatch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 사용불가"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        app:layout_constraintLeft_toRightOf="@id/text1"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/phoneNum"
        app:layout_constraintLeft_toLeftOf="@id/phoneNum"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="영문/숫자/특수문자 8~16자리"
        android:ems="14"
        android:maxLines="1"
        android:maxLength="16"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text1"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="@id/password"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/textwatch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 일치하지 않음"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/text2"
        app:layout_constraintLeft_toRightOf="@id/text2"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/passwordconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 한번 더 입력해주세요."
        android:ems="14"
        android:maxLines="1"
        android:maxLength="16"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@id/text2"
        app:layout_constraintTop_toBottomOf="@id/text2"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/passwordconfirm"
        app:layout_constraintLeft_toLeftOf="@id/passwordconfirm"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=""
        android:ems="14"
        android:maxLines="1"
        android:maxLength="16"
        app:layout_constraintLeft_toLeftOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/text3"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        app:layout_constraintLeft_toLeftOf="@id/nickname"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=""
        android:ems="14"
        android:maxLines="1"
        android:maxLength="16"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="@id/text4"
        app:layout_constraintTop_toBottomOf="@id/text4"
        />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입하기"
        app:layout_constraintLeft_toLeftOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginLeft="200dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>