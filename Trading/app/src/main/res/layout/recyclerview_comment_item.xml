<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/userNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유저닉네임"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/userImg"
        app:layout_constraintTop_toTopOf="@id/userImg"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/writeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성시간"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toRightOf="@id/userNickname"
        app:layout_constraintTop_toTopOf="@id/userImg"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/moreBtn"
        android:background="@drawable/more"
        app:layout_constraintTop_toTopOf="@id/writeTime"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/userComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글내용"
        app:layout_constraintTop_toBottomOf="@id/userNickname"
        app:layout_constraintLeft_toLeftOf="@id/userNickname"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/replyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글쓰기"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/userComment"
        app:layout_constraintLeft_toLeftOf="@id/userNickname"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>