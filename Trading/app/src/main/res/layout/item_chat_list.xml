<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/item_chat_list"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/uImg"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/uNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방이름"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/uImg"
        app:layout_constraintLeft_toRightOf="@id/uImg"
        />

    <TextView
        android:id="@+id/uText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받은 내용"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:maxWidth="300dp"
        app:layout_constraintTop_toBottomOf="@id/uNickname"
        app:layout_constraintLeft_toLeftOf="@id/uNickname"
        />

    <TextView
        android:id="@+id/uDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받은 시간"
        android:textSize="10sp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/uNickname"
        />

</androidx.constraintlayout.widget.ConstraintLayout>